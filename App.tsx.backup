const RoomCarouselSection = () => {
  const { ref, isVisible } = useScrollAnimation();
  const [activeIndex, setActiveIndex] = useState(1); // Start with middle card
  
  // Placeholder room data - replace with actual images
  const rooms = [
    { id: 1, name: "غرفة VR", image: "./Rectangle 23.png" },
    { id: 2, name: "غرفة السباق", image: "./Rectangle 23.png" },
    { id: 3, name: "غرفة السوني", image: "./Rectangle 23.png" },
  ];

  const nextSlide = () => {
    setActiveIndex((prev) => (prev + 1) % rooms.length);
  };

  const prevSlide = () => {
    setActiveIndex((prev) => (prev - 1 + rooms.length) % rooms.length);
  };

  return (
    <section ref={ref} className="relative w-full min-h-screen bg-[#050505] py-20 flex items-center justify-center overflow-hidden">
      {/* Background Image with Heavy Overlay */}
      <div className="absolute inset-0 z-0">
